{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
     },
    "target": "es2016",                                  
    "module": "ES6",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src", "src/types/declarations.d.ts"],
  "exclude": ["node_modules"],
}
